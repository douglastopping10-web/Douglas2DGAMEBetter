<Window x:Class="Test_2dScroler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_2dScroler"
        mc:Ignorable="d"
        Title="MainWindow" Height="465" Width="1200">
    <Grid>
        <Button Name="Start" Width="150" Height="150" Content="START" Click="Start_Click"/>
        <Canvas Name="MovingCanvas" Background="LightGray" Width="1200" Height="450" Visibility="Hidden" Focusable="True" KeyUp="Canvas_KeyUp" KeyDown="Canvas_KeyDown">


            <Image Name="Background" Width="1200" Height="400" Canvas.Top="15" Source="pack://application:,,,/Images/BackgroundImg.png" Stretch="Fill" />
            <Image Name="Background2" Width="1200" Height="400" Canvas.Top="15" Canvas.Left="1200" Source="pack://application:,,,/Images/BackgroundImg.png" Stretch="Fill" />
            <Image Name="Background3" Width="1200" Height="400" Canvas.Top="15" Canvas.Left="-1200" Source="pack://application:,,,/Images/BackgroundImg.png" Stretch="Fill" />
            <Rectangle Name="Player" Fill="Blue" Width="50" Height="70" Canvas.Top="100" Canvas.Left="300"/>
            <Rectangle Name="PlayerGun" Fill="Red" Width="50" Height="20" Canvas.Top="120" Canvas.Left="340"/>
            <Rectangle Name="Ground" Opacity="1" Width="1200" Height="140" Canvas.Top="275"/>
        </Canvas>
        <Canvas Name="GameOverScreen" Width="1200" Height="450" Visibility="Hidden" Background="Black">
            <Image Name="GameOverTextImage" Width="1200" Height="450" Source="/Images/Gameover.png" Stretch="fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox 
                Name="GameoverText" 
                Background="Transparent"
                FontFamily="Javanese Text" FontSize="18"
                Text="You Died Press here to try again"
                Foreground="PaleGoldenrod" 
                Canvas.Left="475" Canvas.Top="300"
                BorderThickness="0" Focusable="False"
                     />
            <Button Name="RetryButton" 
            Width="500"  Height="100"   
            Canvas.Left="350" Canvas.Top="325"
            Background="Transparent"                
            Click="RetryButton_Click"
                    BorderThickness="0">

                <Image Source="/Images/ContinueButton.png" Width="500" Height="100" Stretch="Fill"/>
            </Button>

        </Canvas>
    </Grid>
</Window>
